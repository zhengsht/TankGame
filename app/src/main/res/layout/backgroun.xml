<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yello">

    <com.example.gameone.Corona
        android:id="@+id/corona1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quicken"
        android:rotation="180"
        android:onClick="quicken"
        app:layout_constraintBottom_toBottomOf="@+id/corona1"
        app:layout_constraintEnd_toStartOf="@+id/corona1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.gameone.AquaBlue
        android:id="@+id/aquaBlue"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/corona2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corona1" />

    <com.example.gameone.AquaBlue
        android:id="@+id/aquaBlue2"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        app:layout_constraintBottom_toTopOf="@+id/corona2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corona1" />

    <com.example.gameone.Corona
        android:id="@+id/corona2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLASH"
        android:onClick="flash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/corona2"
        app:layout_constraintTop_toTopOf="@+id/corona2" />


</androidx.constraintlayout.widget.ConstraintLayout>